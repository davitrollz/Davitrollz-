local Library = loadstring(Game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wizard"))()
local Window = Library:NewWindow("Improved / Melhorado")

local Tab = Window:NewSection("Credits: TGMANKASKE and Davitrollz")

-- Vari√°veis de controle
local loops = {
    coins = false,
    bombs = false,
    spins = false,
    trail = false,
    color = false,
    bombloop = false,
    bombloop_nodelay = false
}

-- Loop geral
task.spawn(function()
    while true do
        if loops.coins then
            game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("AddRewardEvent"):FireServer("Cash", 2500000)
        end
        if loops.bombs then
            game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("AddRewardEvent"):FireServer("Gold Bombs", 14234234)
        end
        if loops.spins then
            game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("AddRewardEvent"):FireServer("Spins", 2500000)
        end
        if loops.trail then
            game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("BuyTrailEvent"):FireServer("Rainbow", 0)
        end
        if loops.color then
            game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("BuySkinEvent"):FireServer("Blank", 0)
        end
        task.wait()
    end
end)

-- Loop r√°pido com delay
task.spawn(function()
    while true do
        if loops.bombloop then
            local args = {2}
            game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("BombEvent2"):FireServer(unpack(args))
        end
        task.wait(0.05)
    end
end)

-- Loop sem delay
task.spawn(function()
    while true do
        if loops.bombloop_nodelay then
            local args = {2}
            game:GetService("ReplicatedStorage"):WaitForChild("Remotes"):WaitForChild("BombEvent2"):FireServer(unpack(args))
        else
            task.wait()
        end
    end
end)

-- Toggles
Tab:CreateToggle("Loop 2M Coins", function(state)
    loops.coins = state
end)

Tab:CreateToggle("Loop 2M Bombs üíÄ", function(state)
    loops.bombs = state
end)

Tab:CreateToggle("Loop 2M Spins", function(state)
    loops.spins = state
end)

Tab:CreateToggle("Loop Best Trail", function(state)
    loops.trail = state
end)

Tab:CreateToggle("Loop Best Color", function(state)
    loops.color = state
end)

Tab:CreateToggle("Loop Bomb üí£", function(state)
    loops.bombloop = state
end)

Tab:CreateToggle("Loop Bomb (notDelayverylag) ‚ò†Ô∏è", function(state)
    loops.bombloop_nodelay = state
end)

